{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es5",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ],
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "pretty": true,
    "jsx": "react",
    // change this to any hyperscript like function that you're using
    "jsxFactory": "React.createElement",
    "sourceMap": true,
    "outDir": "lib",
    "declaration": true,
    "declarationDir": "typings",
    "stripInternal": true,
    "skipLibCheck": true,
    "typeRoots": ["@types", "node_modules/@types"]
  },
  "files": [
    "index.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}
